<%- include('includes/head.ejs') %>

    <body>
        <%- include ('includes/nav.ejs') %>
            <main>
                <% if(prods.length > 0) { %>
                    <div class="grid">
                        <% for(let product of prods) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= product.title %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img src="https://cdn.elearningindustry.com/wp-content/uploads/2016/05/top-10-books-every-college-student-read-1024x640.jpeg">
                                </div>
                                <div class="card__content">
                                    <h2 class="product__price">$19.99</h2>
                                    <p class="product__description">A very interesting book about even more interesting things.</p>
                                </div>
                                <div class="card__actions">
                                    <button class="btn">Add to Card</button>
                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Products Found</h1>
                        <% } %>
            </main>
            <%- include ('includes/end.ejs') %>